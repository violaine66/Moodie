<%= render "shared/banner2" %>
<div class="ressources-container text-center">
  <div class="title-card"><h1>Mon kit de secours</h1></div>
    <div class="justify-content-center">
      <div class="calendar-container col-12 col-lg-6">
        <div class="card m-3 rounded-3">
          <div class="d-flex flex-row">
            <div class="card-body">
              <h5 class="card-title"><strong>Ressources près de chez moi</strong></h5>
              <p class="card-text small">Retrouve les ressources à côté de chez toi en suivant le bouton ci-après!</p>
              <%= link_to "Recherche", pres_de_chez_moi_ressources_path, class: "btn btn-secondary" %>
            </div>
          </div>
        </div>

        <div class="d-flex flex-column align-items-center" data-controller="search-ressources">
          <%= form_with url: ressources_path, method: :get, html: { class: "col-8", data: {search_ressources_target: "form"}} do |f|%>
            <%= f.text_field :query, class: "form-control ressources-input", placeholder:
                     "Chercher un terme...", value: params[:query],
                     data: {
                        search_ressources_target: "input",
                        action: "keyup->search-ressources#update"
                      } %>
          <% end %>

          <%= render 'list', ressources: @ressources %>
        </div>
      </div>
    </div>
</div>
