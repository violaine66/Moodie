<%= render "shared/banner2" %>
<div class="container-journal">
  <div class="title-card">
    <h1>Mon journal</h1>
  </div>
  <div class="button-add">
    <%= link_to new_journal_post_path do %>
      <%= image_tag "circle_add.svg", id: "button-add", alt: "button add post" %>
    <% end %>
  </div>
  <% @journal_posts.each do |post| %>
    <%= link_to journal_post_path(post), class: "post-card-index" do %>
      <div class="post-date">
        <%= post.date %>
      </div>
      <div class="emoji-post">
        <% @last_moods.each do |date, mood| %>
            <% if mood.present? && mood.date == post.date %>
              <img src="<%= mood.emoji_url %>" alt="Emoji humeur" class="mood-emoji">
            <% end %>
          <% end %>
      </div>
      <div class="post-content-35">
        <%= truncate(post.content, length: 35, separator: ' ') %>
      </div>
    <% end %>
  <% end %>
</div>
