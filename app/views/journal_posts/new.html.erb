<%= render "shared/banner2" %>

<div class="container post-container">
  <div class="title-card">
    <h1>Créer un post</h1>
  </div>

  <%= form_with model: @journal_post, local: true, html: { class: "post-form" } do |form| %>
    <div class="card post-card-new">
      <div class="card-body">
        <div class="form-group">
          <%= form.label :date, "Date", class: "form-label" %>
          <%= form.date_field :date, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :content, "Contenu", class: "form-label" %>
          <%= form.text_area :content, rows: 5, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="buttons-container-custom">
      <%= form.submit "Créer", class: "btn btn-lg btn-primary" %>
      <%= link_to "Annuler", journal_posts_path, class: "btn btn-lg btn-outline-secondary" %>
    </div>
  <% end %>
</div>
